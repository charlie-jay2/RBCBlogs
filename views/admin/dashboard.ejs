<div class="admin-title">
  <h2>Posts</h2>
  <a href="/add-post" class="button" style="color: white">+ Add New</a>
</div>

<ul class="admin-posts">
  <% data.forEach(post => { %>

  <li style="color: white">
    <a href="/post/<%= post._id %>" style="color: white">
      <%= post.title %> &nearr;
    </a>
    <div class="admin-post-controls" style="color: white">
      <a href="/edit-post/<%= post._id %>" class="btn">Edit</a>

      <form action="/delete-post/<%= post._id %>?_method=DELETE" method="POST">
        <input type="submit" value="Delete" class="btn-delete btn" />
      </form>
    </div>
  </li>

  <% }) %>
</ul>
